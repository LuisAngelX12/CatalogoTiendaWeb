@{
    ViewData["Title"] = "Panel de Administración";
}

<section class="py-5 text-center bg-primary text-white">
    <div class="container">
        <h1 class="display-5 fw-bold">Panel de Control 🛠️</h1>
        <p class="lead mt-3">
            Desde aquí puedes gestionar productos, usuarios, pedidos y revisar estadísticas de la tienda.
        </p>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-4 text-dark">Opciones disponibles</h2>
        <div class="row justify-content-center g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Administrar Productos</h5>
                        <p class="card-text text-muted">Agrega, edita o elimina productos del catálogo.</p>
                        <a href="/Productos" class="btn btn-outline-primary">Ver productos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>