@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h2 class="text-center my-4">Agregar Nuevo Producto</h2>

<div class="card shadow p-4 mx-auto" style="max-width: 600px;">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="ImagenFile" class="form-label">Imagen del producto</label>
            <input type="file" name="ImagenFile" class="form-control" accept="image/*"
                   id="ImagenFile" onchange="previewProductoImagen()" />
            <div class="mt-3">
                <img id="previewImage" src="#" alt="Vista previa" class="img-thumbnail"
                     style="max-height: 200px; display: none;" />
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Categoria" class="form-label">Categoría</label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Guardar</button>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}