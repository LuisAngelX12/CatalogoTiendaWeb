@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="text-center my-4">¿Estás seguro de que deseas eliminar este producto?</h2>

<div class="card mx-auto shadow p-4" style="max-width: 600px;">
    <h4 class="text-danger">Esta acción no se puede deshacer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Nombre</dt>
        <dd class="col-sm-8">@Model.Nombre</dd>

        <dt class="col-sm-4">Descripción</dt>
        <dd class="col-sm-8">@Model.Descripcion</dd>

        <dt class="col-sm-4">Precio</dt>
        <dd class="col-sm-8">₡@Model.Precio.ToString("N2")</dd>

        <dt class="col-sm-4">Categoría</dt>
        <dd class="col-sm-8">@Model.Categoria</dd>

        <dt class="col-sm-4">Imagen</dt>
        <dd class="col-sm-8">
            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
            {
                <img src="@Model.ImagenUrl" class="img-thumbnail" style="max-height: 100px;" />
            }
            else
            {
                <span>No imagen</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger w-100">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
    </form>
</div>