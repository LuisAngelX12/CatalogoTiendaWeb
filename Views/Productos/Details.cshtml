@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2 class="text-center my-4">Detalles del Producto</h2>

<div class="card mx-auto shadow p-4" style="max-width: 600px;">
    <div class="text-center mb-3">
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <img src="@Model.ImagenUrl" class="img-fluid rounded" style="max-height: 200px;" />
        }
        else
        {
            <span class="text-muted">Sin imagen</span>
        }
    </div>
    <dl class="row">
        <dt class="col-sm-4">Nombre</dt>
        <dd class="col-sm-8">@Model.Nombre</dd>

        <dt class="col-sm-4">Descripción</dt>
        <dd class="col-sm-8">@Model.Descripcion</dd>

        <dt class="col-sm-4">Precio</dt>
        <dd class="col-sm-8">₡@Model.Precio.ToString("N2")</dd>

        <dt class="col-sm-4">Categoría</dt>
        <dd class="col-sm-8">@Model.Categoria</dd>
    </dl>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver</a>
    </div>
</div>