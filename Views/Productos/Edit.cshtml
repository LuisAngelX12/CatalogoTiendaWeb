@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="text-center my-4">Editar Producto</h2>

<div class="card shadow mx-auto p-4" style="max-width: 600px;">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImagenUrl" class="form-label">URL de Imagen (solo si deseas cambiar)</label>
            <input asp-for="ImagenUrl" class="form-control" />
            <span asp-validation-for="ImagenUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Categoria" class="form-label">Categoría</label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}